@model Hotels.Models.ViewModels.QuartoVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Quarto</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="HotelId" class="control-label"></label>
                <select asp-for="HotelId" class="form-control" asp-items="ViewBag.HotelId"></select>
                <span asp-validation-for="HotelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroOcupantes" class="control-label"></label>
                <input asp-for="NumeroOcupantes" class="form-control" />
                <span asp-validation-for="NumeroOcupantes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroAdultos" class="control-label"></label>
                <input asp-for="NumeroAdultos" class="form-control" />
                <span asp-validation-for="NumeroAdultos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroCriancas" class="control-label"></label>
                <input asp-for="NumeroCriancas" class="form-control" />
                <span asp-validation-for="NumeroCriancas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            @if (ViewBag.FotoAtual != null)
            {
                <label class="control-label">Foto Atual</label>
                <div class="form-group">
                    @{
                        var base64 = Convert.ToBase64String(ViewBag.FotoAtual);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    }
                    <img src='@imgSrc' style="max-width:200px; max-height:200px;" />
                </div>
            }
            <div class="form-group">
                <label asp-for="Foto" class="control-label">Alterar Foto</label>
                <div class="custom-file">
                    <input asp-for="Foto" type="file">
                </div>
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
